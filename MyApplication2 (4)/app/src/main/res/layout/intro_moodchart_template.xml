<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intro_moodchart_template"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical">

    <include
        android:id="@+id/intro_moodchart_top"
        layout="@layout/top_toolbar"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/intro_moodchart_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro_moodchart_top"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="109dp"
        android:text="@string/multi_coach_marks_moodchart_pen"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intro_moodchart_info"
        android:layout_centerVertical="true"
        android:background="@drawable/info_moodchart" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/intro_moodchart_btngotit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="105dp"
        android:text="@string/multi_coach_marks_moodchart_input"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/intro_moodchart_btngotit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/intro_moodchart_bottom_toolbar"
        android:background="@drawable/heartbutton" />
    <include layout="@layout/bottom_toolbar"
        android:id="@+id/intro_moodchart_bottom_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        />
</RelativeLayout>